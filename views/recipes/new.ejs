<!-- views/recipes/new.ejs -->
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <form class="" action="/recipes" method="post">
      <h3>Name of Recipe:</h3>
      <!-- name -->
      <input type="text" name="name" placeholder="chicken salad">

      <h3>Author of Recipe:</h3>
      <!-- author.name -->
      <input type="text" name="authorName" placeholder="John Smith">
      <!-- author.email -->
      <input type="email" name="authorEmail" placeholder="john@smith.com">

      <h3>Ingredients (place comma between ingredients):</h3>
      <!-- ingredients -->
      <input type="text" name="ingredients" placeholder="chicken, mayo, salad">

      <h3>Average Cost:</h3>
      <!-- averageCost -->
      <input type="number" name="averageCost" placeholder="12.54" step="0.01">

      <button type="submit">Create new recipe</button>
    </form>
  </body>
</html>
